import numpy as np
import tensorflow as tf
from tensorflow import keras
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Activation, Dense, Flatten, BatchNormalization, Conv2D, MaxPool2D
from tensorflow.keras.optimizers import Adam
from tensorflow.keras.metrics import categorical_crossentropy
from tensorflow.keras.preprocessing.image import ImageDataGenerator
from sklearn.metrics import confusion_matrix
import itertools
import os
import shutil
import random
import glob
import matplotlib.pyplot as plt
import warnings
warnings.simplefilter(action='ignore', category=FutureWarning)


os.chdir("C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train")
os.makedirs("train/cats")
os.makedirs("train/dogs")
os.makedirs('valid/dog')
os.makedirs('valid/cat')
os.makedirs('test/dog')
os.makedirs('test/cat')

for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 500):
        shutil.move(i, 'train/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 500):
        shutil.move(i, 'train/dog')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 100):
        shutil.move(i, 'valid/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 100):
        shutil.move(i, 'valid/dog')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 50):
        shutil.move(i, 'test/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 50):
        shutil.move(i, 'test/dog')

train_samples = "train/cats,train/dogs"
validation_samples = "valid/dog,valid/cat"
test_samples = "test/dog,test/cat"

train_samples = ImageDataGenerator(preprocessing_function=tf.keras.applications.vgg16.preprocess_input) \
    .flow_from_directory(directory=train_samples, target_size=(224,224), classes=['cat', 'dog'], batch_size=10)
validation_samples = ImageDataGenerator(preprocessing_function=tf.keras.applications.vgg16.preprocess_input) \
    .flow_from_directory(directory=validation_samples, target_size=(224,224), classes=['cat', 'dog'], batch_size=10)
test_samples = ImageDataGenerator(preprocessing_function=tf.keras.applications.vgg16.preprocess_input) \
    .flow_from_directory(directory=test_samples, target_size=(224,224), classes=['cat', 'dog'], batch_size=10, shuffle=False)
