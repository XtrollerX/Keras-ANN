import os
import random
import shutil
import glob




os.chdir("C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train")
os.makedirs("train/cats")
os.makedirs("train/dogs")
os.makedirs('valid/dog')
os.makedirs('valid/cat')
os.makedirs('test/dog')
os.makedirs('test/cat')

for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 500):
        shutil.move(i, 'train/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 500):
        shutil.move(i, 'train/dog')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 100):
        shutil.move(i, 'valid/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 100):
        shutil.move(i, 'valid/dog')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\cat*'), 50):
        shutil.move(i, 'test/cat')
for i in random.sample(glob.glob('C:\\Users\\xavie\\OneDrive\\Desktop\\train\\train\\dog*'), 50):
        shutil.move(i, 'test/dog')

train_samples = "train/cats,train/dogs"
validation_samples = "valid/dog,valid/cat"
test_samples = "test/dog,test/cat"
